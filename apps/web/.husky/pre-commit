#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Lint check
echo "📝 Running linter..."
npm run lint

# Type check
echo "🔧 Running type check..."
npm run type-check

# Format check
echo "🎨 Checking code format..."
npm run format:check

echo "✅ Pre-commit checks passed!"


